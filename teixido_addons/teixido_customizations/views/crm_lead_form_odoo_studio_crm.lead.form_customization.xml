                        <field name="teix_servei_prevencio" widget="boolean" string="Servei de prevenció"/>
                        <field name="teix_alta_pt"/>
                        <field name="teix_selection_actual" widget="selection_badge" string="Actual" options="{&quot;size&quot;:&quot;sm&quot;}"/>
                      </group>
                      <group name="studio_group_854_right"/>
                    </group>
                  </xpath>
                  <xpath expr="//field[@name='lead_properties']" position="attributes">
                    <attribute name="string">****</attribute>
                  </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
